# Daily status report SMTP credentials.
# Option A: Use same credentials as contact form (no-reply@inlock.ai) from main inlock .env
if [ -f "/home/comzis/inlock/.env" ]; then
  set -a
  source "/home/comzis/inlock/.env"
  set +a
  export REPORT_SMTP_USER="${SMTP_USER:-no-reply@inlock.ai}"
  export REPORT_SMTP_PASS="${SMTP_PASSWORD}"
fi
# Option B: If not using Option A, set explicitly:
# export REPORT_SMTP_USER="no-reply@inlock.ai"
# export REPORT_SMTP_PASS="your-mailbox-password"
